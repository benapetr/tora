# Keyboard shortcuts

main.cpp: tora_toad.h

tora_toad.h: tora_toad.qm
	$(PERL) chex.pl < $< > $@

tora_toad.qm: tora_toad.ts
	$(LRELEASE) $<

# Monolithic target, for non ELF platforms

tora-mono: $(OCI_LIB) $(OBJECTS) windows/tora.o windows/cregistry.o 
	@echo Linking $@
	$(GCC) $(LFLAGS) $(LFLAGS_GLOB) -mwindows -DTOMONOLITHIC -o $@ $(OBJECTS) windows/tora.o windows/cregistry.o \
		$(LIBS_GLOB) $(STDCPP_SHARED) $(ORACLE_SHARED) $(QT_SHARED) $(MYSQL_SHARED)
		

# Static target, easier to distribute

tora-static: $(OCI_LIB) $(OBJECTS) windows/tora.o windows/cregistry.o
	@echo Linking $@
	$(GCC) $(LFLAGS) $(LFLAGS_GLOB) -DTOMONOLITHIC -o $@ $(OBJECTS) windows/tora.o windows/cregistry.o \
		$(QT_STATIC) $(STDCPP_STATIC) $(ORACLE_SHARED) $(LIBS_GLOB) \
		$(MYSQL_STATIC) -mwindows

# The binary for the pluginbased tora

tora.pro: Makefile
	echo "# Not indended to be used for anything except lupdate" > tora.pro
	echo 'SOURCES=	\' >> tora.pro
	echo '	main.cpp\' >> tora.pro
	echo '	toextratranslations.cpp\' >> tora.pro
	echo "	$(SOURCES)" >> tora.pro
	echo 'TRANSLATIONS=$(TRANSLATIONS)' >> tora.pro

lupdate: tora.pro
	$(LUPDATE) tora.pro

lrelease: tora.pro $(TRANSLATIONS)
	$(LRELEASE) tora.pro

tora:   $(OCI_LIB) $(OBJECTS) windows/tora.o windows/cregistry.o
	@echo Linking $@
	$(GCC) $(LFLAGS) -Xlinker "--export-dynamic" $(LFLAGS_GLOB) \
		-o $@ $(OBJECTS) windows/tora.o windows/cregistry.o \
		$(LIBS_GLOB) $(ORACLE_SHARED) $(STDCPP_SHARED) $(QT_SHARED) -mwindows
