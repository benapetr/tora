echo Trying to configure TOra

PERL=`which perl`

if [ -z $PERL ]
then
	echo PERL Required for installation
fi

for a in *.ui
do
    touch $a.h
    echo "#include \"$a.h\"" >$a.cpp
    touch $a.moc
done
for a in *.h
do
    if grep -i Q_OBJECT $a >/dev/null
    then
	touch `echo $a | sed 's/\.h$/\.moc/'`
    fi
done
sleep 1
touch *.h
sleep 1
touch *.ui

if [ \! -f Makefile ]
then
    mv Makefile.orig Makefile
fi

echo "static char *LicenseText=\"" > LICENSE.h
echo "<PRE>" >> LICENSE.h
$PERL -e 'while(<>) { s/\\/\\\\/; s/\"/\\\"/g; print; }' < LICENSE >> LICENSE.h
echo "</PRE>" >> LICENSE.h
echo "\";" >> LICENSE.h

$PERL configure.pl $1 $2 $3 $4 $5 $6 $7 $8 $9
